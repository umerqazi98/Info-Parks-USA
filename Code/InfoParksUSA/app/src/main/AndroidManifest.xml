<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.CS440.infoparksusa">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ParkMenu"
            android:label="@string/park_menu"></activity>
        <activity android:name=".ChooseYourParkListView"
            android:label="Choose the park where you are traveling"
            ></activity>
        <activity android:name=".CalendarActivity"
            android:label="Choose the date you are traveling"
            ></activity>
        <activity android:name=".PackingList"
            android:label="Your Packing List"
            >
        </activity>
        <activity android:name=".UserInfoActivity" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>